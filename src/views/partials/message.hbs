    {{#if message}}
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="alert alert-danger alert-dismissible fade show" role="alert"> {{!aler-danger (color),
                    alert-dismissible sirve para que aparezca un icono que al darle click se vaya, fade para que el
                    mensaje se desvanezca, show para reconocer este mensaje}}
                    {{message}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}

{{#if success}}
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="alert alert-success alert-dismissible fade show" role="alert"> {{!aler-succes (color),
                    alert-dismissible sirve para que aparezca un icono que al darle click se vaya, faed para que el
                    mensaje se desvanezca, show para reconocer este mensaje}}
                    {{success}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
